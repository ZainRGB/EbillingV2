<table class="main_table">
    <thead>
        <tr><th style="border:none;" colspan="5"><h2>Location & Sub-Location List</h2></th></tr>
        <tr>
            <th>Location</th>
            <th>Sub-Location</th>
            <th>LOCATIONID</th>
            <th>SUB-LOCATIONID</th>
            <th>Links</th>
            
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
          
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.LocationName</td>
                        <td>@item.SubLocationName</td>
                        <td>@item.StockLocationId</td>
                        <td>@item.LocationId</td>
                        <td><a href="/billing/@item.HospitalId/@item.StockLocationId/@item.LocationId/@item.LocationName/@item.SubLocationName" target="_blank">Ebilling Link</a></td>

                        <td></td>
                    </tr>
                }
           
        }
        else
        {
            <p>No data available.</p>
        }
    </tbody>
</table>


